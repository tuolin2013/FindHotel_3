<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_border_dashed"
    android:gravity="center"
    android:padding="10sp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center|left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#343434"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_room_size"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#7d7d7d" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="40sp"
        android:layout_marginBottom="3sp"
        android:layout_marginTop="3sp"
        android:background="@drawable/icon_vertical_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8sp"
            android:layout_marginLeft="5sp"
            android:src="@drawable/rmb" />

        <TextView
            android:id="@+id/tv_room_price"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:text="180"
            android:textColor="@color/orange"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btn_reservations"
            android:layout_width="80sp"
            android:layout_height="40sp"
            android:layout_margin="5sp"
            android:background="@drawable/custom_btn_green"
            android:text="预订"
            android:textColor="#FFFFFF"
            android:textSize="26sp" />
    </LinearLayout>

</LinearLayout>