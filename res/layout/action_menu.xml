<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#202d3d" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10sp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:text="当前没有登录"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_exit"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="right|top"
                android:background="@drawable/action_item"
                android:clickable="true"
                android:src="@drawable/action_menu_close" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="5sp"
            android:background="#151e28" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#37485d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginTop="10sp" >

            <LinearLayout
                android:id="@+id/ll_my_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/action_item"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/iv_my_order"
                                android:layout_width="40sp"
                                android:layout_height="40sp"
                                android:layout_gravity="center"
                                android:src="@drawable/action_menu_myorders" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10sp"
                                android:text="我的订单"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_order_count"
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:layout_gravity="top|right"
                            android:layout_marginRight="5sp"
                            android:background="@drawable/circle_red"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <View
                    android:layout_width="1dp"
                    android:layout_height="50sp"
                    android:background="#151e28" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="50sp"
                    android:background="#37485d" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_my_coupons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/action_item"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/action_menu_mycoupon" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="我的优惠券"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <View
                    android:layout_width="1dp"
                    android:layout_height="50sp"
                    android:background="#151e28" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="50sp"
                    android:background="#37485d" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/action_item"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/action_menu_love" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="我的收藏"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="5sp"
            android:background="#151e28" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#37485d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的靓照"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_launcher" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_gravity="right"
                    android:src="@drawable/action_menu_more" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="5sp"
            android:background="#151e28" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#37485d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/action_item"
            android:clickable="true"
            android:gravity="left|center" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/action_menu_scan2dcode" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="扫一扫神器"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="5sp"
            android:background="#151e28" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#37485d" />

        <LinearLayout
            android:id="@+id/ll_my_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/action_item"
            android:clickable="true"
            android:gravity="left|center" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/action_menu_notice" />

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="通知中心"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_notice_count"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_gravity="top|right"
                android:background="@drawable/circle_red"
                android:gravity="center"
                android:text="99"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="5sp"
            android:background="#151e28" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#37485d" />

        <LinearLayout
            android:id="@+id/ll_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/action_item"
            android:clickable="true"
            android:gravity="left|center" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/action_menu_feedback" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="意见反馈"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="5sp"
            android:background="#151e28" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#37485d" />
    </LinearLayout>

</ScrollView>