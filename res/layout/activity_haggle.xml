<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fefce3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_titel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="住房"
                    android:textColor="#ff9236"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffca9c"
                    android:layerType="software" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:background="@drawable/card_border_round_corner"
                android:orientation="vertical"
                android:padding="5sp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:layout_margin="5sp"
                        android:src="@drawable/icon_account" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5sp"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/dotted_horizontal_line"
                            android:layerType="software" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:layout_margin="5sp"
                        android:src="@drawable/about_navigation" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/dotted_horizontal_line"
                            android:layerType="software" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:layout_margin="5sp"
                        android:src="@drawable/about_introduction" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/dotted_horizontal_line"
                            android:layerType="software" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:layout_margin="5sp"
                        android:src="@drawable/icon_rmb" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="5sp"
                            android:layout_marginTop="10sp"
                            android:background="@drawable/dotted_horizontal_line"
                            android:layerType="software" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="36sp"
                        android:layout_height="36sp"
                        android:layout_margin="5sp"
                        android:src="@drawable/icon_b_calendar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="入住" />

                    <LinearLayout
                        android:id="@+id/ll_check_in_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/custom_view_click"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_check_in_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09月30日"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_check_in_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13年，星期五" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="离店" />

                    <LinearLayout
                        android:id="@+id/ll_check_out_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="@drawable/custom_view_click"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_check_out_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09月30日"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_check_out_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13年，星期五" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="10sp" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_haggle"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="50sp"
                android:background="@drawable/custom_btn_green"
                android:text="" />

            <ImageView
                android:layout_width="64sp"
                android:layout_height="64sp"
                android:layout_gravity="center|top"
                android:src="@drawable/icon_button_fire" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="10sp"
                android:src="@drawable/icon_haggle" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>