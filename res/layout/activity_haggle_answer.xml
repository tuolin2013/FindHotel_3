<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:src="@drawable/about_navigation" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="发飙价" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:text="180" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="入住" />

            <LinearLayout
                android:id="@+id/ll_check_in_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/custom_view_click"
                android:clickable="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_check_in_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09月30日"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_check_in_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13年，星期五" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="离店" />

            <LinearLayout
                android:id="@+id/ll_check_out_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/custom_view_click"
                android:clickable="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_check_out_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09月30日"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_check_out_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13年，星期五" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:src="@drawable/icon_singleroom" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:text="大床" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1间" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_margin="5sp"
            android:layout_weight="0.5"
            android:background="@drawable/custom_btn_green"
            android:text="支付"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_margin="5sp"
            android:layout_weight="0.5"
            android:background="@drawable/custom_btn_orange"
            android:text="全部回绝"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>