<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="#ff5454" android:startColor="#ff5454" />

            <stroke android:width="1dip" android:color="#ff5454" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#ff5454" />

            <solid android:color="#ff5454" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="#FD6D6D" android:startColor="#FD6D6D" />

            <stroke android:width="1dip" android:color="#FD6D6D" />
        </shape></item>

</selector>