<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#f7f7f7" />
        </shape>
    </item>
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#f7f7f7" />

            <corners android:radius="1dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="3px">
        <shape android:shape="rectangle" >
            <solid android:color="#f7f7f7" />

            <corners android:radius="1dp" />
        </shape>
    </item>

</layer-list>