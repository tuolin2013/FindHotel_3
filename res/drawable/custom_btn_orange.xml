<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="#dedede" android:startColor="#dedede" />

            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#dedede" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#dedede" />

            <corners android:radius="3dip" />

            <solid android:color="#dedede" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/orange" android:startColor="@color/orange" />

            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="@color/orange" />
        </shape></item>

</selector>