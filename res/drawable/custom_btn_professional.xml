<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="#c72227" android:startColor="#c72227" />


            <stroke android:width="1dip" android:color="#c72227" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">

            <stroke android:width="1dip" android:color="#c72227" />

            <solid android:color="#c72227" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="#DB3F43" android:startColor="#DB3F43" />


            <stroke android:width="1dip" android:color="#DB3F43" />
        </shape></item>

</selector>