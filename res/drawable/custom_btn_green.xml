<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="#FF7400" android:startColor="#FF7400" />

            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#FF7400" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#FF7400" />

            <solid android:color="#FF7400" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="#00CC00" android:startColor="#00CC00" />

            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#00CC00" />
        </shape></item>

</selector>