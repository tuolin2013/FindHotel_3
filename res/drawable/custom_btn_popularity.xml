<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="#3788dd" android:startColor="#3788dd" />


            <stroke android:width="1dip" android:color="#3788dd" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">

            <stroke android:width="1dip" android:color="#3788dd" />

            <solid android:color="#3788dd" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="#61a2e6" android:startColor="#61a2e6" />


            <stroke android:width="1dip" android:color="#61a2e6" />
        </shape></item>

</selector>