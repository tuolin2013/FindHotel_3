<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/orange" android:startColor="@color/orange" />

            <stroke android:width="1dip" android:color="@color/orange" />

            <corners android:radius="3dip" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#c0c0c0" />

            <gradient android:angle="-90" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
        </shape></item>

</selector>